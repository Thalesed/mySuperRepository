<HomeScreen>:
    FloatLayout:
        Header:
            size_hint_y: None
            height: '100dp'
            pos_hint: {'top': 1}
        
        Content:
            id: content
            size_hint: (1, None)
            height: self.minimum_height
            pos_hint: {'top': 0.85}
        
        Footer:
            size_hint_y: None
            height: '50dp'
            pos_hint: {'bottom': 0}

