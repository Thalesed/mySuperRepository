<Header@BoxLayout>:
    size_hint_y: None
    height: '120dp'
    canvas.before:
        Color:
            rgba: 0.8, 0.1, 0.1, 1
        Rectangle:
            pos: self.pos
            size: self.width, self.height + 60
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: '120dp'
        Widget:
            size_hint_x: None
            width: self.parent.width / 2 - 40 
        Image:
            source: './logo.png' 
            size_hint: None, None
            size: '100dp', '100dp'
            allow_stretch: True
            keep_ratio: True
        Widget:
            size_hint_x: None
            width: self.parent.width / 2 - 20 

<Content>:
    orientation: 'vertical'
    padding: '20dp'
    spacing: '20dp'
    size_hint_y: None
    height: self.minimum_height

    Label:
        id: title_label
        text: '+++'
        font_size: '24sp'
        bold: True
        size_hint_y: None
        text_size: self.width, None
        height: self.texture_size[1]

    Label:
        id: paragraph_label
        text: '...'
        font_size: '16sp'
        size_hint_y: None
        text_size: self.width, None
        height: self.texture_size[1]

<Footer@BoxLayout>:
    size_hint_y: None
    height: '50dp'
    canvas:
        Color:
            rgb: (1, 1, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    Button:
        text: 'Inicio'
        halign: 'center' 
        valign: 'bottom'
        background_normal: ''
        background_color:  1, 1, 1, 1
        color: 0, 0, 0, 1
        on_release: app.root.current = 'home'
                

    Button:
        text: 'Agenda'
        background_normal: ''
        background_color:  1, 1, 1, 1
        color: 0, 0, 0, 1
        on_release: app.root.current = 'agenda'
    Button:
        text: 'Galeria'
        background_normal: ''
        background_color:  1, 1, 1, 1
        color: 0, 0, 0, 1
        on_release: app.root.current = 'gallery'
    Button:
        text: 'Contato'
        background_normal: ''
        background_color:  1, 1, 1, 1
        color: 0, 0, 0, 1
        on_release: app.root.current = 'contact'
    Button:
        text: 'Outra'
        background_normal: ''
        background_color:  1, 1, 1, 1
        color: 0, 0, 0, 1
        on_release: app.root.current = 'other'

